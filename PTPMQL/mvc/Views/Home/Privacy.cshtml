@model mvc.Models.Person

<div class="w3-container w3-margin">
    <div class="w3-card-4 w3-light-grey w3-text-blue">
        <div class="w3-container w3-blue">
            <h2 class="w3-center">Chỉnh sửa Person</h2>
        </div>
        <div class="w3-container w3-padding">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="PersonId" />
                
                <div class="w3-section">
                    <label asp-for="FullName" class="w3-text-blue"></label>
                    <input asp-for="FullName" class="w3-input w3-border" placeholder="Nhập họ và tên" />
                </div>
                
                <div class="w3-section">
                    <label asp-for="Address" class="w3-text-blue"></label>
                    <input asp-for="Address" class="w3-input w3-border" placeholder="Nhập địa chỉ" />
                </div>
                
                <div class="w3-section w3-center">
                    <button type="submit" class="w3-button w3-blue w3-padding">💾 Lưu</button>
                    <a asp-action="Index" class="w3-button w3-gray w3-padding">🔙 Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>